<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DealRunner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firefly</item>
        <item name="colorPrimaryVariant">@color/rolling_stone</item>
        <item name="colorOnPrimary">@color/white_rock</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/firefly</item>
        <item name="colorSecondaryVariant">@color/rolling_stone</item>
        <item name="colorOnSecondary">@color/white_rock</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.DealRunner.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.DealRunner.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.DealRunner.LargeComponent
        </item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="ShapeAppearance.DealRunner.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.DealRunner.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.DealRunner.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.DealRunner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DealRunner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DealRunner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>