<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/push_deals_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="152dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_address_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_address"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_businessName_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_businessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_business_name"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_category_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_category"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_description_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_description"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_discount_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_discount"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_email_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_email"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_expiry_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_expiry"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

  

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_phone_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_phone"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/deal_title_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColorHint="@color/firefly"
            app:boxStrokeColor="@android:color/transparent"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/deal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/signup_field_bg"
                android:ems="10"
                android:fontFamily="@font/suezone_regular"
                android:hint="@string/deal_title"
                android:minHeight="48dp"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/firefly"
                app:boxBackgroundColor="?colorPrimaryVariant" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/push_deal_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"


        android:layout_marginBottom="20dp"
        android:background="@color/firefly"
        android:fontFamily="@font/suezone_regular"
        android:text="@string/deal_push"
        android:textAllCaps="false"
        android:textColor="@color/white_rock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>