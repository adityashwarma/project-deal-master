<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.DealRunner"
    android:id = "@+id/business_signup_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_first_name_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="164dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/business_name"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColorHint="?colorOnPrimary"
                    app:boxBackgroundColor="?colorPrimaryVariant"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_address_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@id/business_first_name_text_input_layout"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@id/business_first_name_text_input_layout"
                app:layout_constraintTop_toBottomOf="@id/business_first_name_text_input_layout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/business_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/business_address"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="?colorOnPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_floor_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@id/business_address_text_input_layout"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@id/business_address_text_input_layout"
                app:layout_constraintTop_toBottomOf="@id/business_address_text_input_layout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/floor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/floor_suite"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="?colorOnPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_province_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeColor="@android:color/transparent"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@id/business_floor_text_input_layout"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@id/business_floor_text_input_layout"
                app:layout_constraintTop_toBottomOf="@id/business_floor_text_input_layout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/business_province"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="?colorOnPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/business_postal_code_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@+id/business_province_text_input_layout"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/business_province_text_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/business_province_text_input_layout" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/postal_code"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="?colorOnPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number_text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:startIconDrawable="@drawable/canadian_flag"
                app:startIconTint="@null"
                android:textColorHint="?colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@+id/business_postal_code_text_input_layout"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/business_postal_code_text_input_layout"
                app:layout_constraintTop_toBottomOf="@+id/business_postal_code_text_input_layout" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/business_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/signup_field_bg"
                    android:ems="10"
                    android:fontFamily="@font/suezone_regular"
                    android:hint="@string/business_phone_number"
                    android:inputType="phone"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="?colorOnPrimary"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/business_continue_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/signup_button_bg"
                android:fontFamily="@font/suezone_regular"
                android:text="@string/button_text_continue"
                android:textAllCaps="false"
                android:textColor="@color/white_rock"
                app:layout_constraintEnd_toEndOf="@id/phone_number_text_input_layout"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/phone_number_text_input_layout"
                app:layout_constraintTop_toBottomOf="@id/phone_number_text_input_layout" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/business_continue_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/business_continue_button"
                app:layout_constraintTop_toBottomOf="@+id/business_continue_button">

                <TextView
                    android:id="@+id/businessAccountAlreadyExists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/existing_account"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/business_log_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/login"
                    android:textColor="#FFC107" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="182dp"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_logo_blue" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>